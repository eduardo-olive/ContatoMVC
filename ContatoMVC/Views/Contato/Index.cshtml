@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div>
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar Novo Contato</a>
</div>

<h1 class="display-6">@ViewData["Title"]</h1>

<div class="text-center">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Sobre Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <td>@contato.Nome</td>
                        <td>@contato.SobreNome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Telefone</td>
                        <td>
                            <div class="btn-group" role="group" arial-label="Basic exemple">
                                <a role="button" class="btn btn-info" asp-controller="Contato" asp-action="Editar" asp-route-id="@contato.Id">Editar</a>
                                <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="ApagarConfirmacao" asp-route-id="@contato.Id">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 class="display-6">Nenhum contato cadastrado</h2>
    }
    
</div>